{% extends "index" %}

{% block title %}
    Notifications
{% endblock %}

{% block nav_right %}
    <a href="javascript:void(0)" id="live-activity" class="btn btn-default" data-live-url="{{ URL.route('get_live_notifications') }}" data-poll-interval="{{ interval }}" style="margin-left: 10px;"><i class="fa fa-refresh"></i></a>
{% endblock %}

{% block content %}
    <div class="table-responsive">
        <table id="activity" class="table table-bordered table-hover table-striped">
            <thead>
                <th>Date/Time</th>
                <th>Repo</th>
                <th>Reason</th>
                <th>Type</th>
                <th>Subject</th>
            </thead>
            <tbody class="searchable">
                {% for event in activity %}
                    {{ include('notifications.row', {'event': event}) }}
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}